<View>

  <Header value="Labelling $name (select label and click the image to start)"/>
  <Image name="image" value="$image" zoom="true"/>

  <Labels name="label" toName="image">
    <Label value="image_original" background="#3498DB"/>
    <Label value="article_original" background="#E74C3C"/>
    <Label value="advertisement_original" background="#2ECC71"/>
    <Label value="additional_original" background="#F1C40F"/>
    <Label value="image" background="#3498DB"/>
    <Label value="text" background="#E74C3C"/>
    <Label value="heading" background="#E67E22"/>
    <Label value="separator" background="#9B59B6"/>
  </Labels>

  <Polygon name="plabel" toName="image" />
  <Ellipse name="elabel" toName="image" />
  <Rectangle name="rlabel" toName="image" />

</View>
